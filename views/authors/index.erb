<h1>All Authors</h1>

<div>
    <a href="/authors/new"><button>Add New Author</button></a>
</div>

<%for author in @authors%>
    <table>
        <tr>
            <th>Last name:</th>
            <td><%=author.last_name%></td>
        </tr>
        <tr>
            <th>First name:</th>
            <td><%=author.first_name%></td>
        </tr>
        <tr>
            <th>Books:</th>
            <td><%for book in author.books%>
                    <a href="/books/<%=book.id%>"><%=book.title%></a>
                    <br>
                <%end%>
            </td>
        </tr>
    </table>
    <div>
        <a href="/authors/<%=author.id%>"><button>Author Details</button></a>
    </div>
  <hr/>  
<%end%>    
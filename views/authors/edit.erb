<h1>Edit <%=@author.full_name%></h1>

<form method ="post" action="/authors/<%=@author.id%>">
    <div>
        <label for="last_name">Last name:</label>
    <div>
    </div>
        <input type="text" name="last_name" id="last_name" value="<%=@author.last_name%>"/>
    </div>  
    <div>
        <label for="first_name">First name:</label>
    </div>  
    <div>
        <input type="text" name="first_name" id="first_name" value="<%=@author.first_name%>"/>
    </div>
    <div>
        <label for="bio">Bio:</label>
    </div>  
    <div>
        <textarea type="text" maxlength="255" name="bio" id="bio"><%=@author.bio%></textarea>
    </div>
    <div>
        <label for="status_select">Select status:</label>
    </div>  
    <div>
        <select name="status" id="status_select">
            <option value="active" <%="selected" if @author.status == "active"%>>active</option>
            <option value="deactivated" <%="selected" if @author.status == "deactivated"%>>deactivated</option>
        </select>
    </div>
    <div>
        <input type="submit" value="Submit Changes">
    </div>
</form>
<h1>All Books</h1>

<%for book in @books%>
    <table>
        <tr>
            <th>Title:</th>
            <td><%=book.title%></td>
        </tr>
        <tr>
            <th>Description:</th>
            <td><%=book.description%></td>
        </tr>
        <tr>
            <th>Quantity:</th>
            <td><%=book.quantity%></td>
        </tr>
        <tr>
            <th>Buying cost:</th>
            <td><%=book.buying_cost%></td>
        </tr>
        <tr>
            <th>Selling price:</th>
            <td><%=book.selling_price%></td>
        </tr>
    </table>
    <hr/>
<%end%>    
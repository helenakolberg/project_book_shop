<h1>Add New Book</h1>

<form method ="post" action="/books">
    <div>
        <label for="title">Title:</label>
    </div>
    <div>
        <input type="text" name="title" id="title"/>
    </div>
    <div>
        <label for="author_select">Select author:</label>
    </div>
    <div>
        <select name="author_id" id="author_select">
            <%for author in @authors%>
                <%if author.status == "deactivated"%>
                    <option value=<%=author.id%> disabled><%=author.full_name%></option>
                <%else%>
                    <option value=<%=author.id%>><%=author.full_name%></option>
                <%end%>
            <%end%>
        </select>
    </div>    
    <div>
        <label for="description">Description:</label>
    </div>
    <div>
        <textarea type="text" maxlength="255" name="description" id="description"></textarea>
    </div>
   <div>
        <label for="genre_select">Select genre:</label>
    </div>
    <div>
        <select name="genre_id" id="genre_select">
            <%for genre in @genres%>
                <option value=<%=genre.id%>><%=genre.type.capitalize%></option>
            <%end%>
        </select>
    </div>
    <div>
        <label for="quantity">Quantity:</label>
    </div>
    <div>
        <input type="number" name="quantity" id="quantity"/>
    </div>
    <div>
        <label for="buying_cost">Buying cost:</label>
    </div>
    <div>
        <input type="number" step="0.01" name="buying_cost" id="buying_cost"/>
    </div>
    <div>
        <label for="selling_price">Selling price:</label>
    </div>
    <div>
        <input type="number" step="0.01" name="selling_price" id="selling_price"/>
    </div>
    <div>
        <input type="submit" value="Add Book">
    </div>